@using PlacesBeen.Models;

<h1>Places You have Been</h1>
@if (Model.Count == 0)
{
  <p>There are no Places in the list.</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li>@place.CityName</li>
    <li>You will stay here for @place.StayTime days</li> 
  }
</ul>

<a href="/place/new">Add a new place and days you will stay</a>

<form action="/place/delete" method="post">
  <button type="submit" name="button">Clear All Places</button>
</form>